@model StokTakipSistemi.ViewModels.KullaniciLoginView
@{ 
    Layout = null;

}
<html>
<head>
<link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/giris/css/main.css">
    <link href="~/Content/customstyle.css" rel="stylesheet" />
<style>
    .log{
          opacity:0.9;        
       }
</style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('../Content/giris/js/images/bg-01.jpg');">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33 log">
                <form class="login100-form validate-form flex-sb flex-w" method="post" action="/Security/Login">
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title p-b-53">
                        <font color="#330019" face="Trebuchet MS Bold">STOK TAKİP SİSTEMİ</font>
                    </span>
                    @if (ViewBag.Mesaj != "")
    {
                <div class="mesaj field-validation-error">@ViewBag.Mesaj</div>
}

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            <font face="Trebuchet MS Bols" color=" #444422" size="4"><b>Kullanıcı Adı</b></font>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Bilgisi Giriniz!">
                        <input class="input100" type="text" name="username">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            <font face="Trebuchet MS Bols" size="4"><b>Şifre</b></font>
                        </span>

                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Şifre Bilgisini Giriniz!">
                        <input class="input100" type="password" name="password" />
                        <span class="focus-input100"></span>
                    </div>
                    <label class="Hatali"></label>
                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Sign In
                        </button>
                    </div>


                </form>
            </div>
        </div>
    </div>

    <script src="~/Content/giris/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/giris/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/Content/giris/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/giris/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/giris/vendor/select2/select2.min.js"></script>
    <script src="~/Content/giris/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/giris/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/giris/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Content/giris/js/main.js"></script>
</body>
</html>
